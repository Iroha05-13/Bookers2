<div class="container px-5 px-sm-0">

    <% if @book.errors.any? %>
        <div id="error_explanation">
            <h3><%= @book.errors.count %>errors prohibited this obj form being saved:</h3>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
           </ul>
        </div>
    <% end %>

    <div class="row">
        <%= render "users/template1", user: @user, book: @book %>
        <%= render "template2", books: @books %>
</div>
