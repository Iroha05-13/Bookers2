<h2 class="mt-3">New Book</h2>
<%= form_with model: @book do |f| %>
 <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title %>
 </div>
 <div class="form-group">
     <label for="book_opinion">Opinion</label>
     <%= f.text.area :body, maxlength: "200" %>
 </div>
 <div class="form-group">
     <%= f.submit 'Create Book' %>
 </div>
