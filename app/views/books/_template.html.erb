<div class="col-md-3">
 <h2>User info</h2>
 <!--イメージタグ書く-->
 <table class="table">
  <tbody>
   <tr></tr>

   <tr>
    <th>name</th>
    <th><!--nameカラム--></th>
   </tr>

   <tr>
    <th>introduction</th>
    <th><!--introductionカラム--></th>
   </tr>
  </tbody>
 </table>

 <div class="row">
  <!--user_editのlink_to-->
 </div>

 <h2 class="mt-3">New Book</h2>
 <%= form_with model: @book do |f| %>
 <div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
 </div>
 <div class="form-group">
  <label for="book_opinion">Opinion</label>
  <%= f.text.area :body %>
 </div>
 <div class="form-group">
  <%= f.submit 'Create Book' %>
 </div>
</div>
