<div class="col-md-3">
 <h2>User info</h2>
 <%= image_tag book.user_id.get_profile_image(63,63) %>
 <table class="table">
  <tr></tr>

  <tr>
   <th>name</th>
   <th><%= book.user_id.name %></th>
  </tr>

  <tr>
   <th>introduction</th>
   <th><%= book.user_id.introduction %></th>
  </tr>
 </table>

 <div class="row">
  <% if user.id == current_user.id %>
   <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fa-solid fa-user-cog" %>
  <% end %>
 </div>

 <h2 class="mt-3">New Book</h2>
 <%= form_with model: book do |f| %>
 <div class="form-group">
  <%= f.label :book_title, "Title" %>
  <%= f.text_field :book_title %>
 </div>
 <div class="form-group">
  <%= f.label :book_opinion, "Opinion" %>
  <%= f.text_area :book_body %>
 </div>
 <div class="form-group">
  <%= f.submit 'Create Book', class: "btn btn-success" %>
 </div>
 <% end %>
</div>
